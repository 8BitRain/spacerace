__lua__

local spaceship

function _init() 
	spaceship = {
		x=64,
		y=100,
		speed=2,
		update=function(self)
			if btn(3) then
				spaceship.y+=self.speed
			end
			if btn(2) then
				spaceship.y-=self.speed
			end
		end,
		draw=function(self)
			spr(1,self.x,self.y)
		end
	}
end

function _update()
	spaceship:update()
end

function _draw() 
	cls()	
	spaceship:draw()
end
